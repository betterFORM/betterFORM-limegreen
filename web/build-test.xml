    </target>

    <target name="cleanTestClasses">
        <echo/>
        <echo message="************************************************************************************************************"/>
        <echo message="cleaning out test-sources and test-classes"/>
        <echo message="************************************************************************************************************"/>
        <echo/>
        <delete dir="${target}/test-sources"/>
