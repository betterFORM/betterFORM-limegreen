            </fileset>
        </delete>

        <copy todir="${basedir}/target/test-sources/de/betterform/conformance/xf11/">
            <fileset dir="${basedir}/target/test-sources" includes="**/*.java"/>
        </copy>

        <delete includeemptydirs="true">
            <fileset dir="${basedir}/target/test-sources"
                     includes="**/*"
                     excludes="de/**"
                     casesensitive="yes"/>
        </delete>

    </target>

